@model IEnumerable<projekt.Models.Dokument>

@{
    ViewData["Title"] = "Index";
}

<h1>Dokumenti</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                Število vrstic
            </th>
            <th>
                Število znakov
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Velikost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avtor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tip)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SteviloVrstic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SteviloZnakov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Velikost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avtor.Ime) @Html.DisplayFor(modelItem => item.Avtor.Priimek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tip.Ime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DokumentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DokumentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DokumentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
